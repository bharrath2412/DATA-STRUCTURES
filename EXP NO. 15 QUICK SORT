#include <stdio.h>
void QuickSort(int a[], int left, int right);
int main()
{
int i, n, a[10];
printf("Enter the limit : ");
scanf("%d", &n);
printf("Enter the elements : ");
for (i = 0; i < n; i++)
scanf("%d", &a[i]);
QuickSort(a, 0, n - 1);
printf("The sorted elements are : ");
for (i = 0; i < n; i++)
printf("%d\t", a[i]);
return 0;
}
void QuickSort(int a[], int left, int right)
{
int i, j, temp, pivot;
if (left < right) {
pivot = left;
i = left+1;
j = right;
while (i <= j)
{
while (a[i] < a[pivot])
i++;
while (a[j] > a[pivot])
j--;
if (i <= j) {
temp = a[i];
a[i] = a[j];
a[j] = temp;
}
}
temp = a[pivot];
a[pivot] = a[j];
a[j] = temp;
QuickSort(a, left, j - 1);
QuickSort(a, j + 1, right);
}
}
Input:
Enter the limit : 5
Enter the elements : 45 20 10 70 60
Output:
The sorted elements are : 10 20 45 60 70